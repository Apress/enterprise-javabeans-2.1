<?xml version="1.0"?>
<!DOCTYPE weblogic-ejb-jar PUBLIC '-//BEA Systems, Inc.//DTD WebLogic 6.0.0 EJB//EN' 'http://some.dumb.thing'>
<weblogic-ejb-jar>
  <weblogic-enterprise-bean>
    <ejb-name>loggerBean</ejb-name>
    <message-driven-descriptor>
      <destination-jndi-name>javax.jms.LoggerQueue</destination-jndi-name>
    </message-driven-descriptor>
    <jndi-name>loggerBean</jndi-name>
  </weblogic-enterprise-bean>
  <security-role-assignment>
    <role-name>Logger</role-name>
    <principal-name>guest</principal-name>
  </security-role-assignment>
</weblogic-ejb-jar>

